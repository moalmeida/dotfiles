imagemagick \
jpegoptim \
openssl \
packer \
packer-completion \
pip-completion \
pngcrush \
sqlite \
ssh-copy-id \
terraform \
the_platinum_searcher \
tree \
wget \
z \
zopfli \


# install "out of appstore" apps
brew cask install \
atom \
droplr \
firefox \
github-desktop \
google-chrome \
google-drive \
hammerspoon \
iterm2 \
keycastr \
kodi \
macvim \
microsoft-office \
netspot \
notational-velocity \
sketch \
spotify \
the-unarchiver \
transmission \
vlc \
winbox \

